#include "mersenne_twister.h"
#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <time.h>

extern void dsyevd_(char* JOBS, char* UPLO, int* N, double* A, int* LDA, double* W, double* WORK, int* LWORK, int* IWORK, int* LIWORK, int* INFO);

extern void dsymm_(char* SIDE, char* UPLO, int* M, int* N, double* alpha, double* A, int* LDA, double* B, int* LDB, double* beta, double* C, int* LDC);

extern void dgemm_(char* TRANSA, char* TRANSB, int* M, int* N, int* K, double* alpha, double* A, int* LDA, double* B, int* LDB, double* beta, double* C, int* LDC);

void print_matrix(int M, int N, double* mat) {
  printf("[\n");
  for(int i=0;i < M; ++i) {
    for(int j=0;j < N; ++j) printf("   %+.4f", mat[i+M*j]);
    printf("\n");
  }
  printf("];\n");
}

int main(int argc, char **argv) {
    if(argc != 2) {
      fprintf(stderr, "Usage: 1.This 2.Dmat\n");
      exit(1);
    }
    const int seed = 0;
    init_genrand(seed);

    int Dmat = atoi(argv[1]);
    double *mat, *EigenVectors, *temp;
    
    double *w, *work;
    int lwork = 1+6*Dmat+2*Dmat*Dmat;
    int *iwork;
    int liwork = 3+5*Dmat;
    char JOBS='V';
    char UPLO='U';
    char SIDE='L';
    char nTrans='N';
    char Trans ='T';
    double alpha=1, beta=0;
    int info;

    struct timespec start_time, end_time;
    clock_t start, end;
    
    mat          = (double*)malloc( sizeof(double)*Dmat*Dmat );
    EigenVectors = (double*)malloc( sizeof(double)*Dmat*Dmat );
    temp         = (double*)malloc( sizeof(double)*Dmat*Dmat );
    w            = (double*)malloc( sizeof(double)*Dmat );
    work         = (double*)malloc( sizeof(double)*lwork );
    iwork        = (int*)malloc( sizeof(int)*liwork );
    
    for(int i=0;i < Dmat; ++i) {
      mat[i+Dmat*i] = genrand_real3();
      for(int j=0;j < i; ++j) {
	mat[i+Dmat*j] = genrand_real3();
	mat[j+Dmat*i] = mat[i+Dmat*j];
      }
    }
    for(int i=0;i < Dmat; ++i) for(int j=0;j < Dmat; ++j) EigenVectors[i+Dmat*j] = mat[i+Dmat*j];
    //    print_matrix(Dmat, Dmat, mat);

    start = clock();
    clock_gettime(CLOCK_REALTIME, &start_time);
    dsyevd_(&JOBS, &UPLO, &Dmat, EigenVectors, &Dmat, w, work, &lwork, iwork, &liwork, &info);
    end = clock();
    clock_gettime(CLOCK_REALTIME, &end_time);
    unsigned int sec;
    int nsec;
    double d_sec;
    sec = end_time.tv_sec - start_time.tv_sec;
    nsec = end_time.tv_nsec - start_time.tv_nsec;
    d_sec = (double)sec +(double)nsec / (1000 * 1000 * 1000);
    fprintf(stdout, "%d %f %f\n", Dmat, (double)(end-start)/CLOCKS_PER_SEC, d_sec);
    
    //dsymm_(&SIDE, &UPLO, &Dmat, &Dmat, &alpha, mat, &Dmat, EigenVectors, &Dmat, &beta, temp, &Dmat);
    //dgemm_(&Trans, &nTrans, &Dmat, &Dmat, &Dmat, &alpha, EigenVectors, &Dmat, temp, &Dmat, &beta, mat, &Dmat);

    //    print_matrix(Dmat, Dmat, mat);
    
    return 0;
}
